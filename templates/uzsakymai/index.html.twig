{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h2>UÅ¾sakymai</h2>
    <button id="new-order" class="btn btn-primary mb-3">Naujas uÅ¾sakymas</button>

    <table id="uzsakymaiTable" class="table table-striped">
        <thead>
            <tr>
                <th>UÅ¾sakymo numeris</th>
                <th>Data</th>
                <th>BÅ«sena</th>
                <th>Pristatymas</th>
                <th>Suma</th>
                <th>Veiksmai</th>
            </tr>
        </thead>
        <tbody>
            {% for uzsakymas in uzsakymai %}
                <tr>
                    <td>{{ uzsakymas.uzs_nr }}</td>
                    <td>{{ uzsakymas.uzs_create_date|date('Y-m-d H:i') }}</td>
                    <td>{{ uzsakymas.uzs_busena }}</td>
                    <td>{{ uzsakymas.uzs_pristatymas }}</td>
                    <td>{{ uzsakymas.uzs_suma|number_format(2, '.', ',') }}</td>
                    <td>
                        <a href="{{ path('uzsakymai_redaguoti', {'id': uzsakymas.uzs_id}) }}" class="btn btn-sm btn-outline-secondary">âœï¸</a>
                        <a href="{{ path('uzsakymai_redaguoti', {'id': uzsakymas.uzs_id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Ar tikrai norite iÅ¡trinti?');">ğŸ—‘ï¸</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script>
   document.addEventListener("turbo:load", function() {
        if ($.fn.DataTable.isDataTable("#uzsakymaiTable")) {
            $('#uzsakymaiTable').DataTable().destroy();
        }

        $('#uzsakymaiTable').DataTable({
            paging: true,
            searching: true,
            ordering: true
        });

        // Patikrinsim, ar mygtukas egzistuoja prieÅ¡ priskiriant event listener
        let newOrderButton = document.getElementById("new-order");
        if (newOrderButton) {
            newOrderButton.removeEventListener("click", newOrderHandler);
            newOrderButton.addEventListener("click", newOrderHandler);
        }
    });

    // Funkcija mygtuko eventui
    function newOrderHandler() {
        window.location.href = "{{ path('uzsakymai_redaguoti') }}";
    }

</script>
{% endblock %}

